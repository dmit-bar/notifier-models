{
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./lib/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2020",
    "lib": ["dom", "es2020", "dom.iterable", "esnext"],
    "allowJs": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src"
  }
}
