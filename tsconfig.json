{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "outDir": "dist/",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
